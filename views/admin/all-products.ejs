<%- include('../includes/head.ejs') %>
<style>
  .g-5{
    --bs-gutter-x: 6rem!important;
}
</style>
<body>
   <%- include('../includes/navigation.ejs') %>
    <main>
        <div class="container">
            <br />
             <% if(prods.length > 0) { %>
              <br />
             <div class="row g-5">
              <% for(let product of prods) { %>
              <div class="col-12 col-md-4 col-lg-3">
                <div class="card" style="width: 18rem;">
                  <a href="#">
                    <img src="<%= product.imageUrl %>"  class="card-img-top" style="height: 200px!important; object-fit: cover;" alt="...">
                  </a>
                  <div class="card-body">
                    <h5 class="card-title"><%= product.title %> </h5>
                    <p class="card-text"><%= product.description %></p>
                    <div class="d-flex align-items-center justify-content-between">
                      <span style="font-size: 17px; font-weight: bolder;"> $<%= product.price %></span>
                     <div class="d-flex align-items-center">
                        <a href="/admin/edit-product/_update/<%= product._id %>?edit=true " class="btn btn-primary mr-1">
                          <svg style="width: 20px; height: 20px;" version="1.1" id="Edit" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                          viewBox="0 0 20 20" enable-background="new 0 0 20 20" xml:space="preserve">
                       <path fill="#FFFFFF" d="M17.561,2.439c-1.442-1.443-2.525-1.227-2.525-1.227L8.984,7.264L2.21,14.037L1.2,18.799l4.763-1.01
                         l6.774-6.771l6.052-6.052C18.788,4.966,19.005,3.883,17.561,2.439z M5.68,17.217l-1.624,0.35c-0.156-0.293-0.345-0.586-0.69-0.932
                         c-0.346-0.346-0.639-0.533-0.932-0.691l0.35-1.623l0.47-0.469c0,0,0.883,0.018,1.881,1.016c0.997,0.996,1.016,1.881,1.016,1.881
                         L5.68,17.217z"/>
                       </svg>
                       
                      </a>
                      <form action="/admin/delete-product" method="POST">
                        <input type="hidden" class="form-control d-none" name="productId"
                        value="<%= product._id %>" />
                        <button type="submit" class="btn btn-danger ">
                          <svg style="width: 20px; height: 20px;" version="1.1" id="Trash" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                                viewBox="0 0 20 20" enable-background="new 0 0 20 20" xml:space="preserve">
                              <path fill="#FFFFFF" d="M3.389,7.113L4.49,18.021C4.551,18.482,6.777,19.998,10,20c3.225-0.002,5.451-1.518,5.511-1.979
                                l1.102-10.908C14.929,8.055,12.412,8.5,10,8.5C7.59,8.5,5.072,8.055,3.389,7.113z M13.168,1.51l-0.859-0.951
                                C11.977,0.086,11.617,0,10.916,0H9.085c-0.7,0-1.061,0.086-1.392,0.559L6.834,1.51C4.264,1.959,2.4,3.15,2.4,4.029v0.17
                                C2.4,5.746,5.803,7,10,7c4.198,0,7.601-1.254,7.601-2.801v-0.17C17.601,3.15,15.738,1.959,13.168,1.51z M12.07,4.34L11,3H9
                                L7.932,4.34h-1.7c0,0,1.862-2.221,2.111-2.522C8.533,1.588,8.727,1.5,8.979,1.5h2.043c0.253,0,0.447,0.088,0.637,0.318
                                C11.907,2.119,13.77,4.34,13.77,4.34H12.07z"/>
                              </svg>
                       </button>
                        
                      </form>


                     </div>
                    </div>
                  </div>
                </div>
              </div>
              <%}%>

            </div>
            <% }else{ %>
               <h2>No Product Found</h2>
              <% } %>
        </div>
    </main>
</body>
<script src="/static/js/bootstrap.js"></script>
<%- include('../includes/end.ejs') %>
